
@{
    Layout = "~/Views/Shared/Layouts/PageLayout.cshtml";
}

@section HeadIncludes {
	@{
		string currentUrl = Url.Encode(Request.Url.PathAndQuery);
		double timeoutSeconds = FormsAuthentication.Timeout.TotalSeconds;
	}

	<meta name="meta-refresh" http-equiv="refresh" content="@timeoutSeconds;url=@FormsAuthentication.LoginUrl?autologout=true&ReturnUrl=@currentUrl" />

	@RenderSection("HeadIncludes", required: false)
}

@section SiteMenu {
	@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { title = "Home" })
	|
	@Html.ActionLink("Firearms", "", "", new { area = "Firearms" }, new { title = "My Firearms" })
	|
	@Html.ActionLink("Account", "", "", new { area = "User" }, new { title = "My Account" })
	|
	@Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { title = "Logout" })
}

@section Scripts {
	@Scripts.Render("~/bundles/reloadjs")

	@RenderSection("Scripts", required: false)
}

@RenderBody()